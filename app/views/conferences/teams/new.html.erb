<%= link_to "Conferences", "/conferences" %> | <%= link_to "Teams", "/teams" %>
<hr>
<%= form_with model: @team, url: "/conferences/#{@conference.id}/teams", method: :post, local: true do |form| %>
  <h4><%= form.label :title, "Create a new team:" %></h4>
  <%= form.label :school_name, 'School Name:' %><br>
  <%= form.text_field :school_name %><br><br>
<%= form.label :mascot, 'Mascot:' %><br>
  <%= form.text_field :mascot %><br><br>
  <%= form.label :private, 'Is this a Private School?' %><br>
  <%= form.label :private_true, 'Yes' %>
  <%= form.radio_button :private, true %><br>
  <%= form.label :private_false, 'No' %>
  <%= form.radio_button :private, false %><br><br>

  <%= form.label :rank, 'School Rank:' %><br>
  <%= form.number_field :rank, in: 0..1000, step: 1 %><br><br>
  <%= form.submit 'Create Team' %>
<% end %>